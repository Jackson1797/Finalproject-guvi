pipeline {
    agent any

    environment {
        DOCKER_HUB_USER = 'vaheeth'
        IMAGE_NAME = 'dev'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev', url: 'https://github.com/vaheethraj/project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t $DOCKER_HUB_USER/$IMAGE_NAME:COMMIT_ID ."
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([string(credentialsId: 'DockerhubCreds', variable: 'DOCKER_HUB_PASS')]) {
                    sh """
                        echo $DOCKER_HUB_PASS | docker login -u $DOCKER_HUB_USER --password-stdin
                        docker push $DOCKER_HUB_USER/$IMAGE_NAME:COMMIT_ID
                    """
                }
            }
        }
    }
}
