pipeline {
    agent any

    environment {
        DOCKER_HUB_USER = 'vaheeth'
        IMAGE_NAME = 'dev'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev', url: 'https://github.com/zaarthulvignesh3003/guvi_project_01.git'
            }
        }

        stage('Execute build.sh script which builds and pushes image to dev branch') {
            steps {
                sh "chmod +x build/build.sh"
                sh "sh build/build.sh"
                sh "echo 'COMMIT_ID'"
                sh "docker images"
            }
        }

    }
}
